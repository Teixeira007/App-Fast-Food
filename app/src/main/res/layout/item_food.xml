<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    android:layout_margin="6dp"
    style="@style/CardView.Light"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Nome da comida"
        android:padding="10dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/image_food"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/name_food"
            android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/description_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="The Gramercy Tavern Burger - 4 Pack"
        android:textSize="16sp"
        android:layout_below="@+id/image_food"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/price_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$2.55"
        android:textSize="20sp"
        android:layout_below="@+id/description_food"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textColor="@android:color/black"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>